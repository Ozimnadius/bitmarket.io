mixin icon(iconName, iconClass)
    svg(class=`${iconClass}`)
        use(xlink:href=`/images/icons/sprite.svg#${iconName}`)

mixin iconPath(iconPath,iconName, iconClass)
    svg(class=`${iconClass}`)
        use(xlink:href=`${iconPath}/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
    img(src=`${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)

mixin blog(arr)
    .blog
        each i in arr
            a(href='news.html').blog__item
                img(src='images/content/blog/' + i + '.jpg' alt='lorem').blog__img

mixin actions()
    .actions
        .actions__top
            .actions__title.title Акции
            a(href='news.html').actions__link.link Смотреть все
        .actions__timer
            div(data-date='2019,09,20').timer
                div(data-id='days' data-name='Дней').timer__item.timer__days 0
                div(data-id='hours' data-name='Час').timer__item 0
                div(data-id='minutes' data-name='Мин.').timer__item 0
                div(data-id='seconds' data-name='Сек.').timer__item 0


        .actions__item
            +items([1],'item_actions')

mixin items(arr, dopClass)
    each i in arr
        a(href='product.html' class=dopClass).item
            //- top
            .item__top
                //- img
                .item__img
                    img(src='images/content/products/img.jpg' alt='lorem').item__img
                //- controls
                .item__controls
                    .item__control.jsFavorite
                        +icon('heart', 'item__control-svg')
                    .item__control.jsCompare
                        +icon('recycle', 'item__control-svg')

            //- bottom
            .item__bottom
                //- category
                .item__cat Видеокарты

                //- title
                .item__title Видеокарта AMD (ATI) Radeon RX 570 Sapphire Pulse PCI-E 8192Mb

                //- rating
                .item__rating
                    .item__stars
                        .item__star.active
                            +icon('star', 'item__star-svg')
                        .item__star.active
                            +icon('star', 'item__star-svg')
                        .item__star.active
                            +icon('star', 'item__star-svg')
                        .item__star.active
                            +icon('star', 'item__star-svg')
                        .item__star
                            +icon('star', 'item__star-svg')


                    .item__rating-count (12)

                //- pricing
                .item__pricing
                    .item__price
                        .price
                            .price__val 12.290
                            .price__cur руб.
                    .item__oldprice
                        .price.price_old
                            .price__val 14.365
                            .price__cur руб.


                //- buttons {
                .item__buttons
                    .btn.btn_g.item__one.jsItemOne купить в 1 клик
                    .item__buy.jsItemBuy
                        .item__buy-title купить товар
                        +icon('cart', 'item__buy-svg')

