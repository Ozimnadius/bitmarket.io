mixin slider(title, name, dopClass)
    div(class=name).slider
        .slider__top
            +sliderTitle(title)
        .slider__bottom
            .swiper-container.slider__container
                .swiper-wrapper
                    each i in [1,2,3,4,5,6,7,8]
                        .swiper-slide.slider__slide
                            +items([1],dopClass)
mixin sliderTitle(title)
    .slider__title.title= title
    .slider__nav
        button(type='button').slider__prev.arrow
            +icon('arr-l','arrow__svg')
        button(type='button').slider__next.arrow
            +icon('arr-r','arrow__svg')

