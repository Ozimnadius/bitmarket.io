                                .awhy__row.row
                                    each i,x in awhy
                                        .awhy__item
                                            +image('images/content/about/'+(x+1)+'.png', 'lorem', 'awhy__img')
                                            .awhy__name!=i
                        .about__revs
                            .arevs
                                .arevs__top
                                    .arevs__title.title Отзывы о нас
                                    a(href='/').arevs__link.link Смотреть все
                                .arevs__bottom.row
