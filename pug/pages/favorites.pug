                                                        a(href='product.html').fitem__title Видеокарта AMD (ATI) Radeon RX 570 Sapphire Pulse PCI-E 8192Mb
                                                        .fitem__desc [PCI-E 3.0, 8 ГБ GDDR5, 256 бит, 1168 МГц - 1284 МГц, HDMI (2 шт), DisplayPort (2 шт)]
                                                //- left
                                                .fitem__right-left
                                                    //- pricing
                                                    .fitem__pricing
                                                        //- price
                                                        .fitem__price
                                                            span.fitem__price-val 12.290
                                                            span.fitem__price-cur &nbsp;руб.
                                                        //- old
                                                        .fitem__old
                                                            span.fitem__old-val 14.365
                                                            span.fitem__old-cur &nbsp;руб.
                                                    //- compare
                                                    button(type='button').fitem__compare
                                                        +icon('recycle', 'fitem__compare-svg')
                                                    //- buy
                                                    button(type='button').fitem__buy
